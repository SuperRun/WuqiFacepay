<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="480dp" android:height="120dp">
        <shape  xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="#ffffffff" />
            <gradient  android:type="linear" android:useLevel="true" android:endColor="#FF5E6F" android:startColor="#EF77C4" android:angle="180" />
            <corners android:topLeftRadius="120dp" android:topRightRadius="120dp" android:bottomLeftRadius="120dp" android:bottomRightRadius="120dp" />
        </shape>
