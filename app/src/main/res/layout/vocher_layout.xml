<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/md_vocherWidth"
    android:layout_height="@dimen/md_vocherHeight"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/vocher_bg">
    <Button
        android:id="@+id/closeVocher"
        android:layout_width="@dimen/md_vocher_close_size"
        android:layout_height="@dimen/md_vocher_close_size"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/md_vocher_close_marginRight"
        android:background="@drawable/vocher_close"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恭喜你，获得优惠券"
        android:letterSpacing="0.2"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="@dimen/md_vocher_title_marginTop"
        android:textSize="@dimen/md_vocher_title_textSize">
    </TextView>

    <TextView
        android:layout_width="@dimen/md_vocher_infoWidth"
        android:layout_height="@dimen/md_vocher_infoHeight"
        android:layout_marginTop="@dimen/md_vocher_info_marginTop"
        android:background="@drawable/vocher_text_bg"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:text="满20减6"
        android:textStyle="bold"
        android:textColor="@color/vocherInfoTextColor"
        android:textSize="@dimen/md_vocher_info_textSize"/>
    <Button
        android:id="@+id/getVocher"
        android:layout_width="@dimen/md_vocher_btnWidth"
        android:layout_height="@dimen/md_vocher_btnHeight"
        android:layout_marginTop="@dimen/md_vocher_btn_marginTop"
        android:background="@drawable/shape_btn_vocher"
        android:text="好的(3s)"
        android:textSize="@dimen/md_vocher_btn_textSize"
        android:textFontWeight="800"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        android:textColor="@color/vocherBtnTextColor"/>
</LinearLayout>